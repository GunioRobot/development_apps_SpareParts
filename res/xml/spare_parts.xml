       android:summary="ROM name, build and system version.">

      <PreferenceCategory
	 android:title="Infos">

	<PreferenceScreen
	   android:key="rom_name"
	   android:title="Name"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_version"
	   android:title="Version"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_build"
	   android:title="Build / Fingerprint"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_sys_version"
	   android:title="System version"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_kernel"
	   android:title="Kernel"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_radio"
	   android:title="Radio"
	   android:summary=" Unavailable">
	</PreferenceScreen>

      </PreferenceCategory>

